<Page x:Class="TTMSViewWPF.View.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TTMSViewWPF.View.Pages"
      mc:Ignorable="d" 
      Title="LoginPage">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label Content="账号 :" FontSize="20" Margin="10"/>
                <TextBox Name="AccountBox" FontSize="20" VerticalContentAlignment="Center"
                         Width="180" Height="30"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="密码 :" FontSize="20" Margin="10"/>
                <PasswordBox Name="PasswordBox" FontSize="20" VerticalContentAlignment="Center" 
                         Width="180" Height="30"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
                <Button Margin="10" Name="SignIn" Width="80" Height="35" Content="登陆" FontSize="20" Click="SignIn_OnClick"/>
                <Button Margin="10" Name="Cancer" Width="80" Height="35" Content="取消" FontSize="20" Click="Cancer_OnClick"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
